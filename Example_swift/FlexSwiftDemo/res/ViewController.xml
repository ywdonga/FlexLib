<?xml version="1.0" encoding="utf-8"?>
<div
    style="
    flex:1,
    justifyContent:center,
    alignItems:center,bgColor:white">
    <div style="height:1,width:100%,bgColor:red"/>
    <FlexScrollView name="_scroll" style="flex:1,width:100%,alignItems:center,vertScroll:true">
        <span name="_label" style="marginTop:20,@:system/buttonText,text:You can run on iPhoneX,color:blue"/>
        
        <span name="_label" style="marginTop:20,@:system/buttonText,text:@multilangdemo,linesNum:0,color:blue"/>
        
        <div style="width:100%,flexDirection:row,justifyContent:space-around">
            <FlexTouchView onPress="onControls" style="@:system/button,@:system/buttonAttr">
                <span
                style="@:system/buttonText,text:Controls"/>
            </FlexTouchView>
            <FlexTouchView onPress="onTestTable" style="@:system/button,@:system/buttonAttr">
                <span
                style="@:system/buttonText,text:TableView"/>
            </FlexTouchView>
        </div>
        <div style="width:100%,flexDirection:row,justifyContent:space-around">
            <FlexTouchView onPress="onTestScrollView:" style="@:system/button,@:system/buttonAttr">
                <span
                style="@:system/buttonText,text:ScrollView"/>
            </FlexTouchView>
            <FlexTouchView onPress="onTestModalView" style="@:system/button,@:system/buttonAttr">
                <span
                style="@:system/buttonText,text:ModalView"/>
            </FlexTouchView>
        </div>

        <div style="width:100%,flexDirection:row,justifyContent:space-around">
            <FlexTouchView onPress="onTestLoginView" style="@:system/button,@:system/buttonAttr">
                <span
                style="@:system/buttonText,text:FlexTouchView"/>
            </FlexTouchView>
            <FlexTouchView onPress="onjustifyContent" style="@:system/button,@:system/buttonAttr">
                <span
                style="@:system/buttonText,text:justifyContent"/>
            </FlexTouchView>
        </div>

       <div style="width:100%,flexDirection:row,justifyContent:space-around">
            <FlexTouchView onPress="onTextView" style="@:system/button,@:system/buttonAttr">
                <span
                style="@:system/buttonText,text:Forms"/>
            </FlexTouchView>
            <FlexTouchView onPress="onViewstyles" style="@:system/button,@:system/buttonAttr">
                <span
                style="@:system/buttonText,text:Layouts"/>
            </FlexTouchView>
        </div>
       
       <div style="width:100%,flexDirection:row,justifyContent:space-around">
           <FlexTouchView onPress="onFrameVC" style="@:system/button,@:system/buttonAttr">
               <span
               style="@:system/buttonText,text:FrameVC"/>
           </FlexTouchView>
           <FlexTouchView onPress="onExplorerFlex" style="@:system/button,@:system/buttonAttr">
               <span
               style="@:system/buttonText,text:Online Flex Explorer"/>
           </FlexTouchView>
       </div>
       
       <div style="width:100%,flexDirection:row,justifyContent:space-around">
           <FlexTouchView onPress="onFrameView" style="@:system/button,@:system/buttonAttr">
               <span
               style="@:system/buttonText,text:FrameView"/>
           </FlexTouchView>
           <FlexTouchView onPress="onFrameView" style="@:system/button,@:system/buttonAttr,alpha:0,userInteractionEnabled:false">
               <span
               style="@:system/buttonText,text:FrameView"/>
           </FlexTouchView>
       </div>

       <div style="$width:ScreenWidth*0.6,height:50,alignItems:center,justifyContent:center,bgColor:#e5e5e5,borderRadius:6">
            <span
            style="@:system/buttonText,text:表达式计算，屏幕宽度的60%"/>
       </div>
    </FlexScrollView>
</div>
